<div class="row">
    <div class="col-md-8 m-auto">
      <div class="card">
        <div class="card-header bg-dark text-white">
          <h1 class="h4 mb-0">
            <i class="fas fa-edit mr-2"></i>Edit Note
          </h1>
        </div>
        <div class="card-body">
          <form action="/notes/<%= note._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <label for="title">Title</label>
              <input
                type="text"
                id="title"
                name="title"
                class="form-control"
                placeholder="Enter note title"
                value="<%= note.title %>"
                required
              />
            </div>
            <div class="form-group">
              <label for="content">Content</label>
              <textarea
                id="content"
                name="content"
                class="form-control"
                rows="6"
                placeholder="Enter note content"
                required
              ><%= note.content %></textarea>
            </div>
            <div class="d-flex justify-content-between align-items-center mt-4">
              <div>
                <a href="/notes" class="btn btn-outline-secondary">
                  <i class="fas fa-arrow-left mr-2"></i>Cancel
                </a>
              </div>
              <div>
                <form action="/notes/<%= note._id %>?_method=DELETE" method="POST" class="d-inline mr-2">
                  <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this note?')">
                    <i class="fas fa-trash-alt mr-2"></i>Delete
                  </button>
                </form>
                <button type="submit" class="btn btn-dark">
                  <i class="fas fa-save mr-2"></i>Update Note
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>